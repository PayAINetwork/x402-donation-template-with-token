{
  "name": "X402 Token Donation Platform",
  "description": "A Next.js template for creating a token donation platform with X402 payments. Users can mint tokens with USDC or donate tokens to write on a community board.",
  "repository": "https://github.com/Mbdulrohim/x402-donation-with-token-template",
  "demo": "https://x402-donation-template.vercel.app",
  "tags": [
    "nextjs",
    "solana",
    "web3",
    "crypto",
    "payments",
    "x402",
    "donation",
    "token",
    "spl-token"
  ],
  "categories": [
    "Web3",
    "Payments",
    "Social"
  ],
  "env": [
    {
      "key": "DATABASE_URL",
      "description": "Neon Postgres connection string",
      "required": true
    },
    {
      "key": "RESOURCE_SERVER_WALLET_ADDRESS",
      "description": "Public key of wallet that receives payments",
      "required": true
    },
    {
      "key": "RESOURCE_SERVER_KEYPAIR",
      "description": "Base58 encoded private key for token distribution",
      "required": true
    },
    {
      "key": "TOTAL_SUPPLY",
      "description": "Total token supply",
      "required": true
    },
    {
      "key": "NEXT_PUBLIC_SOLANA_NETWORK",
      "description": "Solana network (solana-devnet or solana)",
      "required": true,
      "default": "solana-devnet"
    },
    {
      "key": "NEXT_PUBLIC_SOLANA_RPC_URL",
      "description": "Solana RPC endpoint",
      "required": true,
      "default": "https://api.devnet.solana.com"
    },
    {
      "key": "NEXT_PUBLIC_PROJECT_DESCRIPTION",
      "description": "Description of your project",
      "required": true
    },
    {
      "key": "FACILITATOR_URL",
      "description": "X402 payment facilitator URL",
      "required": false,
      "default": "https://facilitator.payai.network"
    }
  ],
  "framework": "nextjs",
  "css": "tailwind"
}
